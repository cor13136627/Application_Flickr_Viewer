<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joe.application_flickr_viewer" >

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity2"
            android:label="@string/title_activity_main_activity2" >
        </activity>
        <activity
            android:name=".activity_search"
            android:label="@string/title_activity_activity_search" >
        </activity>
        <activity
            android:name=".TopLocations"
            android:label="@string/title_activity_top__locations" >
        </activity>
        <activity
            android:name=".TopPhotographs"
            android:label="@string/title_activity_top__photographs" >
        </activity>
    </application>

</manifest>
